<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.neu.ipco.entity">

	<class name="Quiz" table="quiz">
	
		<id name="quizId" column="quiz_id">
			<generator class="increment"/>
		</id>
		
		<many-to-one name="activity" class="Activity" column="activity_id" cascade="all" lazy="false"/>
		
		<set name="correctAnswers" cascade="all" lazy="false"><!-- order-by="orderNo" -->
			<key column="quiz_id"/>
			<one-to-many class="Option"/>
		</set>
		
		<set name="userAnswers" cascade="all" lazy="false"><!-- order-by="orderNo" -->
			<key column="quiz_id"/>
			<one-to-many class="Option"/>
		</set>
		
		<many-to-one name="status" class="Status" column="status_id" lazy="false" />
		
		<property name="orderNo" column="order_no"/>
		
		<property name="createdTs" type="timestamp" column="created_ts"/>
		<property name="updatedTs" type="timestamp" column="updated_ts"/>
	</class>
</hibernate-mapping>
